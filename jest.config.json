{
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "ignorePatterns": ["node_modules", "dist"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
